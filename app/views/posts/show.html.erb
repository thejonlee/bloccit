<h1><%= @post.title %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @post.body %></p>
  </div>
  <div class="col-md-4">
    <!-- Edit button directs user to /posts/@post.id/edit -->
    <%= link_to "Edit", edit_post_path(@post), class: 'btn btn-success' %>
    <!-- create delete button, override default post w/delete -->
    <%= link_to "Delete Post", @post, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %>
  </div>
</div>
