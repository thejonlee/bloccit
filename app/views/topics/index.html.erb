<h1>Topics</h1>

<div class="row">
  <div class="col-md-8">
<!-- #7 loop each topic in @topics -->
    <% @topics.each do |topic| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
<!-- #8 create link to show view for each topic -->
            <%= link_to topic.name, topic %>
          </h4>
          <small>
            <%= topic.description %>
          </small>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
<!-- #9 create link to create a new topic -->
    <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
  </div>
</div>
