<h4>Add a comment</h4>
<!-- form for a post and comment bc comments are shallowly nested -->
<%= form_for [post, comment] do |f| %>
  <div class="form-group">
<!-- sr-only adds hidden label for people using screen readers -->
    <%= f.label :body, class: 'sr-only' %>
    <%= f.text_field :body, class: 'form-control', placeholder: "Enter a new comment" %>
  </div>
  <%= f.submit "Submit Comment", class: 'btn btn-default pull-right' %>
<% end %>
